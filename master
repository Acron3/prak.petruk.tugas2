void Prime (int *);

int main()
{
	int n;
	int *pn = &n;
	cout << "Masukkan banyak angka : ";
	cin >> *pn;

	int angka[n];
	int *pa = angka;

	for (int i = 0; i < n; i++)
	{
		cout << "Angka ke-" << i+1 << " = " ;
		cin >> *(pa+i);

	}
	 cout << endl;
	 
         cout << "Angka yang merupakan Prima = ";

         for (int i=0; i < n; i++)
         {
                Prime((pa+i));
         }

         cout << endl;

         return 0;
}

void Prime (int *angka) {
	bool hasil = false;
	
	if (*angka >= 2) {
		if (*angka == 2) hasil = true;
		else{
			for (int i = 2 ; i < *angka; i++){
				if (*angka %i == 0) {
					hasil = false;break;
					}
				else hasil = true; 
			}
		}
	}
	else hasil = false;

	if (hasil == true) cout << *angka << " ";
}
